<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Назва сесії -->
        <TextView
            android:id="@+id/tvSessionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Медитація"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <Spinner
            android:id="@+id/spinnerSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Вибір часу -->
        <LinearLayout
            android:id="@+id/timeOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/time3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/time_option_bg"
                android:text="3 хв"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/time5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/time_option_bg"
                android:text="5 хв"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/time10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/time_option_bg"
                android:text="10 хв"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/time20"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/time_option_bg"
                android:text="20 хв"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/time30"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/time_option_bg"
                android:text="30 хв"
                android:textColor="@android:color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Таймер -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="48sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"/>

        <!-- Прогрес -->
        <ProgressBar
            android:id="@+id/progressTimer"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/purple_700"
            android:layout_marginBottom="24dp"/>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="START"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="PAUSE"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btnResume"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="RESUME"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="STOP"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Інформаційна панель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvTotalSessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Всього сесій: 0"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумарний час: 0 хв"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Серія: 0 днів"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
