<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Головна тема застосунку -->
    <style name="Theme.MeditationApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorSecondary">@color/purple_500</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- Стиль плитки вибору часу -->
    <style name="TimeOptionStyle">
        <item name="android:background">@drawable/time_option_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#1B5E20</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
